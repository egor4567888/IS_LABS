<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.1">
    <persistence-unit name="PersonsPU" transaction-type="JTA">
        <jta-data-source>jdbc/studsDS</jta-data-source>
        <class>ru.example.model.Person</class>
        <class>ru.example.model.Coordinates</class>
        <class>ru.example.model.Location</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <!-- EclipseLink settings -->
            <property name="eclipselink.logging.level" value="INFO"/>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
            <!-- Можно отключить автоматическое обновление схемы в production -->
        </properties>
    </persistence-unit>
</persistence>
